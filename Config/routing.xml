<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
  <route id="moneris.payment" path="/moneris/payment" methods="post">
    <default key="_controller">Moneris:Moneris:payment</default>
  </route>
  <route id="moneris.configuration.default" path="/admin/module/Moneris" methods="get">
    <default key="_controller">Moneris:MonerisConfig:default</default>
  </route>
  <route id="moneris.configuration.save" path="/admin/module/Moneris" methods="post">
    <default key="_controller">Moneris:MonerisConfig:save</default>
  </route>
  <route id="moneris.moneris_errors.list" path="/admin/module/Moneris/moneris_errors" methods="get">
    <default key="_controller">Moneris:MonerisErrors:default</default>
  </route>
  <route id="moneris.moneris_errors.create" path="/admin/module/Moneris/moneris_errors" methods="post">
    <default key="_controller">Moneris:MonerisErrors:create</default>
  </route>
  <route id="moneris.moneris_errors.view" path="/admin/module/Moneris/moneris_errors/edit" methods="get">
    <default key="_controller">Moneris:MonerisErrors:update</default>
  </route>
  <route id="moneris.moneris_errors.edit" path="/admin/module/Moneris/moneris_errors/edit" methods="post">
    <default key="_controller">Moneris:MonerisErrors:processUpdate</default>
  </route>
  <route id="moneris.moneris_errors.delete" path="/admin/module/Moneris/moneris_errors/delete" methods="post">
    <default key="_controller">Moneris:MonerisErrors:delete</default>
  </route>
</routes>
